<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" 
    xmlns:qr="components/qr-display">
    <ActionBar title="Panky's Adventure" icon="" />

    <ScrollView>
        <StackLayout class="p-4">
            <Label text="Welcome to Panky's Adventure!" class="text-3xl text-center mb-4" />
            
            <Button text="Child Profiles" tap="{{ onProfilesTap }}" class="-primary mb-4" />
            <Button text="Start Adventure" tap="{{ onStartAdventure }}" class="-primary mb-4" />
            <Button text="Settings" tap="{{ onSettingsTap }}" class="-primary mb-4" />
            
            <Label text="{{ message }}" class="text-lg text-center text-gray-400 mb-4" textWrap="true" />
            
            <qr:qr-display />
        </StackLayout>
    </ScrollView>
</Page>